venv () {
    SDIR=`pwd`
    while true; do
            if [ -d venv ]; then
                echo "Sourcing env from $PWD/.venv"
                source "venv/bin/activate"
                break
            fi
            if [ -d .venv ]; then
                echo "Sourcing env from $PWD/.venv"
                source ".venv/bin/activate"
                break
            fi
            if [ -d virtualenv ]; then
                echo "Sourcing env from $PWD/virtualenv"
                source "virtualenv/bin/activate"
                break
            fi
            cd ../
            if [[ "$PWD" == "/" ]]; then
                echo "No virtual environments found."
                break
            fi
        done
    cd $SDIR
    unset SDIR
}

